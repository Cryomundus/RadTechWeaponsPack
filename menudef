// This adds it to options so we don't have multiple option menus in the main options menu.
AddOptionMenu "OptionsMenu"
{
    Submenu "$RADTECH_MENU", "RadTechWeaponry"
}

OptionMenu FlareGuns
{
	Title "$MENU_FGUNTITLE"
   	StaticText "$MENU_NOTICE", 1
    StaticText  "$MENU_SUPPRESS1", "white"
    StaticText  "$MENU_SUPPRESS2", "white"
   	StaticText ""
	StaticText "$MENU_SPAWNOPTIONS", 1
    StaticText  "$MENU_FGUNPLASTSPAWNTEXT", "white"
	Option "$MENU_WEPSPAWNRATE", "fl_weapon_spawn_bias", "DropBias"
	SafeCommand "$MENU_RESETWEP", "resetcvar fl_weapon_spawn_bias"
	StaticText ""
	StaticText  "$MENU_PFGUNDROPENEMY", "white"
	Option "$MENU_WEPDROPRATE", "fl_weapon_drop_chance_bias", "DropBias"
